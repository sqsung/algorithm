function solution(s) {
  let answer = '',
      arr = s.split(' ');
  
  for(let i = 0; i < arr.length; i++) {
      for(let j = 0; j < arr[i].length; j++) {
          if (j === 0 || j % 2 === 0) {
              answer += arr[i][j].toUpperCase();
          } else {
              answer+= arr[i][j];
          }
      }
  answer += ' ';
  }
  return answer.split(' ').slice(0, -1).join(' ');
}

console.log(solution("lol is this working"));